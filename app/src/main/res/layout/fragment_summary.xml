    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorAccent"
        app:cardCornerRadius="16dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/credits_divider"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="32"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/title_credits_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="Total Credits"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/credits_divider"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/title_credits_summary"
                android:background="@color/colorPrimary" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

